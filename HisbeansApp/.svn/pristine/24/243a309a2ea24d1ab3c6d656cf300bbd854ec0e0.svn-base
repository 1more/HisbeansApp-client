<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="fill"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="55.3dp"
            android:layout_marginBottom="0.7dp"
            android:background="@drawable/title_background"
            android:gravity="center"
            android:text="매장 소개"
            android:textColor="#000000"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="112.7dp"
            android:orientation="vertical" >

            <Button
                android:id="@+id/depart_menuIntroBtn"
                android:layout_width="240dp"
                android:layout_height="28.7dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="11.3dp"
                android:background="@drawable/depart_menu_btn_normal" />

            <Button
                android:id="@+id/depart_shopLocBtn"
                android:layout_width="240dp"
                android:layout_height="28.7dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="11.3dp"
                android:background="@drawable/depart_shop_btn_normal" />

            <Button
                android:id="@+id/depart_hisbeansIntroBtn"
                android:layout_width="240dp"
                android:layout_height="28.7dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/depart_hisbeans_btn_normal" />
        </LinearLayout>
    </LinearLayout>

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        layout="@layout/common_bottomtab" />

</LinearLayout>