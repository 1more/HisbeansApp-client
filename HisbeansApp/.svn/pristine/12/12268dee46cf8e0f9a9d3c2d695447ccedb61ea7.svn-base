<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f3f3f3"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="fill"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="55.3dp"
            android:layout_marginBottom="0.7dp"
            android:background="@drawable/title_background"
            android:gravity="center"
            android:text="계정 정보 변경"
            android:textColor="#000000"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="46dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="53.3dp"
                    android:layout_height="13.3dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/find_txt_new" />

                <EditText
                    android:id="@+id/setting_account_info_password_new_edit"
                    style="@style/AppTheme"
                    android:layout_width="140dp"
                    android:layout_height="26.7dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="6.7dp"
                    android:layout_weight="1"
                    android:background="@drawable/inputbox_id"
                    android:inputType="textPassword"
                    android:paddingLeft="13.3dp"
                    android:paddingRight="13.3dp"
                    android:textColor="#534334"
                    android:textSize="11dp" >

                    <requestFocus />
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6.7dp"
                android:gravity="center_horizontal" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="53.3dp"
                    android:layout_height="13.3dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/find_txt_re" />

                <EditText
                    android:id="@+id/setting_account_info_password_check_edit"
                    style="@style/AppTheme"
                    android:layout_width="140dp"
                    android:layout_height="26.7dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="6.7dp"
                    android:layout_weight="1"
                    android:background="@drawable/inputbox_id"
                    android:inputType="textPassword"
                    android:paddingLeft="13.3dp"
                    android:paddingRight="13.3dp"
                    android:textColor="#534334"
                    android:textSize="11dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="9.3dp"
                android:layout_marginTop="18dp"
                android:gravity="center_horizontal" >

                <Button
                    android:id="@+id/setting_account_info_password_ok_btn"
                    android:layout_width="46.7dp"
                    android:layout_height="28.7dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="6.7dp"
                    android:background="@drawable/find_btn_next_off" />

                <Button
                    android:id="@+id/setting_account_info_password_cancel_btn"
                    android:layout_width="46.7dp"
                    android:layout_height="28.7dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/find_btn_cancel_normal" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="253.3dp"
                android:layout_height="46.7dp"
                android:src="@drawable/find_txt" />
        </LinearLayout>
    </LinearLayout>

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        layout="@layout/common_bottomtab" />

</LinearLayout>