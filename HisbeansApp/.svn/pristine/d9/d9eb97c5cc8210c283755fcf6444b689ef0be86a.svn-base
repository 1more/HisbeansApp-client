<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f3f3f3"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="fill"
        android:layout_weight="1"
        android:orientation="vertical" >
    <include layout="@layout/lookforpw_title" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:src="@drawable/find_pw_process_c" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="13.3dp"
            android:gravity="center_horizontal" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="53.3dp"
                android:layout_height="13.3dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/find_txt_new" />

            <EditText
                android:id="@+id/pw_doneNewPWEt"
                android:layout_width="140dp"
                android:layout_height="26.7dp"
                android:layout_gravity="center"
                android:layout_marginLeft="6.7dp"
                android:layout_weight="1"
                android:background="@drawable/inputbox_id"
                android:inputType="textPassword"
                android:paddingLeft="13.3dp"
                android:paddingRight="13.3dp"
                android:textColor="#534334"
                android:textSize="11dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="6.7dp"
            android:gravity="center_horizontal" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="53.3dp"
                android:layout_height="13.3dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/find_txt_re" />

            <EditText
                android:id="@+id/pw_doneCheckPWEt"
                android:layout_width="140dp"
                android:layout_height="26.7dp"
                android:layout_gravity="center"
                android:layout_marginLeft="6.7dp"
                android:layout_weight="1"
                android:background="@drawable/inputbox_id"
                android:inputType="textPassword"
                android:paddingLeft="13.3dp"
                android:paddingRight="13.3dp"
                android:textColor="#534334"
                android:textSize="11dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="9.3dp"
            android:gravity="center_horizontal" >

            <Button
                android:id="@+id/pw_doneLoginB"
                android:layout_width="46.7dp"
                android:layout_height="28.7dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="6.7dp"
                android:background="@drawable/find_btn_next_off" />

            <Button
                android:id="@+id/pw_doneCancelB"
                android:layout_width="46.7dp"
                android:layout_height="28.7dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/find_btn_cancel_normal" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="253.3dp"
            android:layout_height="46.7dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/find_txt" />
        
    </LinearLayout>

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        layout="@layout/common_bottom" />

</LinearLayout>