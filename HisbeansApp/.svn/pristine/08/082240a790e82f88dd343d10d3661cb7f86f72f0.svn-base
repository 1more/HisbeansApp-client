<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_gravity="fill"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="55.3dp"
            android:layout_marginBottom="0.7dp"
            android:background="@drawable/title_background"
            android:gravity="center"
            android:text="설정"
            android:textColor="#000000"
            android:textSize="20dp" />

        <ScrollView
            android:id="@+id/setting_scrollView"
            style="@style/AppTheme"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" >

            <LinearLayout
                android:id="@+id/setting_linear_top"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/setting_linear_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8.7dp"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/setting_subtitle_01" />

                    <Button
                        android:id="@+id/setting_notice_btn"
                        android:layout_width="266.7dp"
                        android:layout_height="27.3dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/setting_notice_btn" />

                    <Button
                        android:id="@+id/setting_service_btn"
                        android:layout_width="266.7dp"
                        android:layout_height="26.7dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/setting_service_btn" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/setting_linear_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8.7dp"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/setting_subtitle_03" />

                    <Button
                        android:id="@+id/setting_version_btn"
                        android:layout_width="266.7dp"
                        android:layout_height="27.3dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/setting_version_btn" />

                    <Button
                        android:id="@+id/setting_developer_btn"
                        android:layout_width="266.7dp"
                        android:layout_height="26.7dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/setting_developer_btn" />

                    <Button
                        android:id="@+id/setting_hisbeans_btn"
                        android:layout_width="266.7dp"
                        android:layout_height="26.7dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/setting_hisbeans_btn" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/setting_linear_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/setting_subtitle_02" />

                    <Button
                        android:id="@+id/setting_info_btn"
                        android:layout_width="266.7dp"
                        android:layout_height="27.3dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/setting_info_btn" />

                    <Button
                        android:id="@+id/setting_signout_btn"
                        android:layout_width="266.7dp"
                        android:layout_height="26.7dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/setting_signout_btn" />

                </LinearLayout>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        layout="@layout/common_bottomtab" />

</LinearLayout>