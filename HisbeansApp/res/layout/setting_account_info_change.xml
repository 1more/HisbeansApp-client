<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_gravity="fill"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="55.3dp"
            android:layout_marginBottom="0.7dp"
            android:background="@drawable/title_background"
            android:gravity="center"
            android:text="계정 정보 변경"
            android:textColor="#000000"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="26dp"
            android:background="#f3f3f3"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="7dp" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/setting_accout_info_name" />

                <TextView
                    android:id="@+id/setting_account_info_change_name"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="7dp" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/setting_accout_info_id" />

                <TextView
                    android:id="@+id/setting_account_info_change_id"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="7dp" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/setting_accout_info_phone" />

                <EditText
                    android:id="@+id/setting_account_info_change_phone_edit"
                    style="@style/AppTheme"
                    android:layout_width="140dp"
                    android:layout_height="26.7dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/inputbox_id"
                    android:ems="10"
                    android:inputType="number"
                    android:paddingLeft="13.3dp"
                    android:paddingRight="13.3dp"
                    android:textColor="#534334"
                    android:textSize="11dp" >

                    <requestFocus />
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/setting_accout_info_email" />

                <EditText
                    android:id="@+id/setting_account_info_change_email_edit"
                    style="@style/AppTheme"
                    android:layout_width="140dp"
                    android:layout_height="26.7dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/inputbox_id"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="13.3dp"
                    android:paddingRight="13.3dp"
                    android:textColor="#534334"
                    android:textSize="11dp" />

            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10.7dp"
            android:src="@drawable/setting_account_info_change_warning" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" >

            <Button
                android:id="@+id/setting_account_info_change_ok_btn"
                android:layout_width="46.7dp"
                android:layout_height="28.7dp"
                android:layout_marginRight="6.7dp"
                android:background="@drawable/find_btn_next_off" />

            <Button
                android:id="@+id/setting_account_info_change_cancel_btn"
                android:layout_width="46.7dp"
                android:layout_height="28.7dp"
                android:background="@drawable/find_btn_cancel_normal" />
        </LinearLayout>
    </LinearLayout>

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        layout="@layout/common_bottomtab" />

</LinearLayout>