<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f3f3f3"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="fill"
        android:layout_weight="1"
        android:orientation="vertical" >

        <include
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            layout="@layout/register_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="240dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:src="@drawable/register_process_b" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13.3dp" >

                <TextView
                    android:id="@+id/register_timerMinTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="03"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/register_timerMiddleTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text=" : "
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/register_timerSecTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13.3dp" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="53.3dp"
                    android:layout_height="13.3dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/find_txt_phone" />

                <TextView
                    android:id="@+id/register_phoneTv"
                    android:layout_width="106.7dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6.7dp"
                    android:layout_marginRight="6.7dp"
                    android:gravity="center"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/register_getNumB"
                    android:layout_width="73.3dp"
                    android:layout_height="26.7dp"
                    android:background="@drawable/find_btn_num_normal"
                    android:textSize="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="53.3dp"
                    android:layout_height="13.3dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/find_txt_certi" />

                <EditText
                    android:id="@+id/register_numEt"
                    style="@style/AppTheme"
                    android:layout_width="106.7dp"
                    android:layout_height="26.7dp"
                    android:layout_marginLeft="6.7dp"
                    android:layout_marginRight="6.7dp"
                    android:layout_weight="1"
                    android:background="@drawable/inputbox_id"
                    android:ems="10"
                    android:inputType="number"
                    android:paddingLeft="13.3dp"
                    android:paddingRight="13.3dp"
                    android:textColor="#534334"
                    android:textSize="12dp" >

                    <requestFocus />
                </EditText>

                <Button
                    android:id="@+id/register_okB"
                    android:layout_width="73.3dp"
                    android:layout_height="26.7dp"
                    android:background="@drawable/find_btn_certi_off"
                    android:textSize="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9.3dp"
                android:layout_marginTop="18dp"
                android:gravity="center_horizontal" >

                <Button
                    android:id="@+id/register_cancelB"
                    android:layout_width="46.7dp"
                    android:layout_height="28.7dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/find_btn_cancel" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="253.3dp"
                android:layout_height="46.7dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/find_txt" />
        </LinearLayout>
    </LinearLayout>

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        layout="@layout/common_bottom" />

</LinearLayout>