<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f3f3f3"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="fill"
        android:layout_weight="1"
        android:orientation="vertical" >

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/register_title" />

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="240dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:src="@drawable/register_process_a" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/register_nameImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:src="@drawable/register_name_txt" />

                    <EditText
                        android:id="@+id/register_nameEt"
                        style="@style/AppTheme"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="67.3dp"
                        android:layout_weight="1"
                        android:background="@drawable/inputbox_id"
                        android:inputType="text"
                        android:paddingLeft="13.3dp"
                        android:paddingRight="13.3dp"
                        android:textColor="#534334"
                        android:textSize="11dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal" >

                    <ImageView
                        android:id="@+id/register_idImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/register_id_txt" />

                    <EditText
                        android:id="@+id/register_idEt"
                        style="@style/AppTheme"
                        android:layout_width="110dp"
                        android:layout_height="26.7dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="7.3dp"
                        android:layout_weight="1"
                        android:background="@drawable/inputbox_id"
                        android:ems="10"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="13.3dp"
                        android:paddingRight="13.3dp"
                        android:textColor="#534334"
                        android:textSize="11dp" />

                    <Button
                        android:id="@+id/register_dupCheckBtn"
                        android:layout_width="60dp"
                        android:layout_height="22.5dp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:background="@drawable/dupcheck_btn_off" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/register_pwImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/register_pw_txt" />

                    <EditText
                        android:id="@+id/register_pwEt"
                        style="@style/AppTheme"
                        android:layout_width="110dp"
                        android:layout_height="26.7dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="67.3dp"
                        android:layout_weight="1"
                        android:background="@drawable/inputbox_id"
                        android:ems="10"
                        android:inputType="textPassword"
                        android:paddingLeft="13.3dp"
                        android:paddingRight="13.3dp"
                        android:textColor="#534334"
                        android:textSize="11dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/register_confPwImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/register_conformpw_txt" />

                    <EditText
                        android:id="@+id/register_pwConfEt"
                        style="@style/AppTheme"
                        android:layout_width="110dp"
                        android:layout_height="26.7dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="67.3dp"
                        android:layout_weight="1"
                        android:background="@drawable/inputbox_id"
                        android:ems="10"
                        android:inputType="textPassword"
                        android:paddingLeft="13.3dp"
                        android:paddingRight="13.3dp"
                        android:textColor="#534334"
                        android:textSize="11dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/register_phoneImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/register_phone_txt" />

                    <EditText
                        android:id="@+id/register_phoneEt"
                        style="@style/AppTheme"
                        android:layout_width="110dp"
                        android:layout_height="26.7dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="67.3dp"
                        android:layout_weight="1"
                        android:background="@drawable/inputbox_id"
                        android:ems="10"
                        android:inputType="phone"
                        android:paddingLeft="13.3dp"
                        android:paddingRight="13.3dp"
                        android:textColor="#534334"
                        android:textSize="11dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/register_mailImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/register_email_txt" />

                    <EditText
                        android:id="@+id/register_mailEt"
                        style="@style/AppTheme"
                        android:layout_width="110dp"
                        android:layout_height="26.7dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="67.3dp"
                        android:layout_weight="1"
                        android:background="@drawable/inputbox_id"
                        android:ems="10"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="13.3dp"
                        android:paddingRight="13.3dp"
                        android:textColor="#534334"
                        android:textSize="11dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal" >

                    <Button
                        android:id="@+id/register_mainNextBtn"
                        android:layout_width="46.7dp"
                        android:layout_height="28.7dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="6.7dp"
                        android:background="@drawable/find_btn_next_off" />

                    <Button
                        android:id="@+id/register_mainCancelBtn"
                        android:layout_width="46.7dp"
                        android:layout_height="28.7dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/find_btn_cancel" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="253.3dp"
                    android:layout_height="46.7dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="11.3dp"
                    android:layout_weight="1"
                    android:src="@drawable/find_txt" />
            </LinearLayout>

        </ScrollView>
    </LinearLayout>

</LinearLayout>