<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="fill"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="55.3dp"
            android:background="@drawable/title_background"
            android:gravity="center"
            android:text="선물카드"
            android:textColor="#000000"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="112.7dp"
            android:orientation="vertical" >

            <Button
                android:id="@+id/giftcard_main_send_btn"
                android:layout_width="240dp"
                android:layout_height="28.7dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="11.3dp"
                android:background="@drawable/giftcard_main_send_btn_normal" />

            <Button
                android:id="@+id/giftcard_main_getbox_btn"
                android:layout_width="240dp"
                android:layout_height="28.7dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="11.3dp"
                android:background="@drawable/giftcard_main_getbox_btn_normal" />

            <Button
                android:id="@+id/giftcard_main_sendbox_btn"
                android:layout_width="240dp"
                android:layout_height="28.7dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/giftcard_main_sendbox_btn_normal" />

        </LinearLayout>
    </LinearLayout>

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/common_bottomtab" />

</LinearLayout>