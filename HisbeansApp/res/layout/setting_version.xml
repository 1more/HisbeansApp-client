<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_gravity="fill"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="55.3dp"
            android:layout_marginBottom="0.7dp"
            android:background="@drawable/title_background"
            android:gravity="center"
            android:text="버전 정보"
            android:textColor="#000000"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="26.7dp"
            android:layout_marginTop="26dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/setting_version_text_cur"
                android:layout_width="266.7dp"
                android:layout_height="27.3dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/setting_version_cur"
                android:gravity="right"
                android:textColor="#6096c7"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/setting_version_text_last"
                android:layout_width="266.7dp"
                android:layout_height="26.7dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/setting_version_last"
                android:gravity="right"
                android:textColor="#6096c7"
                android:textSize="14dp" />

        </LinearLayout>

        <Button
            android:id="@+id/setting_version_update_btn"
            android:layout_width="240dp"
            android:layout_height="28.7dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/setting_version_update_btn_normal" />
    </LinearLayout>

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        layout="@layout/common_bottomtab" />

</LinearLayout>